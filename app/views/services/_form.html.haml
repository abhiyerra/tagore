= form_for(@service) do |f|
  - if @service.errors.any?
    #error_explanation
      %h2
        = pluralize(@service.errors.count, "error")
        prohibited this service from being saved:
      %ul
        - @service.errors.full_messages.each do |msg|
          %li= msg
  .field
    This will be lowercased.
    
    \#{f.label :name}
    %br/
    = f.text_field :name
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :subdomain
    %br/
    = f.text_field :subdomain
  .field
    = f.label :type
    = f.select [["SharedService"]]
  .field
    = f.label :repo
    %br/
    = f.text_field :repo
  .actions
    = f.submit
