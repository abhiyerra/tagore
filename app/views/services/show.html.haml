.row
  .span10
    %h1= @service.name

  .span2
    = button_to 'Deploy', deploy_service_path(@service), :class => "btn btn-primary"

.row
  .span12
    %pre= @service.repo

.row
  .span12
    %p= @service.description

  .span12
    %h2 Resources
    = render "resources/form"
    - @service.resources.each do |r|
      %p
        #{r.class.to_s} - #{r.machine.ip_address}
      %pre
        = pp r.data

= link_to 'Edit', edit_service_path(@service)
|
= link_to 'Back', services_path
